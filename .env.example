# State of Mika SDK Environment Variables

# Anthropic API Key (required for Claude adapter)
ANTHROPIC_API_KEY=your_api_key_here

# MCP Server Configuration (optional)
# Uncomment and set if you want to use specific servers
# MCP_WEATHER_SERVER=mcp_weather
# MCP_SEARCH_SERVER=mcp_search

# Testing Configuration
# Path to a test image for multimodal testing
TEST_IMAGE_PATH=/path/to/test/image.jpg

# Server Installation Options
# Set to 'true' to auto-install missing servers during testing
AUTO_INSTALL_SERVERS=true

# Logging Configuration
# Set to 'DEBUG', 'INFO', 'WARNING', 'ERROR', or 'CRITICAL'
LOG_LEVEL=INFO

# Development Configuration
# Set to 'true' to enable detailed error information
DEBUG_MODE=false 